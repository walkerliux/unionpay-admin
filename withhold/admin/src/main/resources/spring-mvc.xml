<!-- 拦截器配置 -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**"/>
			<mvc:exclude-mapping path="/login/*"/>  
			<mvc:exclude-mapping path="/js/**"/>
			<mvc:exclude-mapping path="/css/**"/>
			<mvc:exclude-mapping path="/WEB-INF/**"/>
			<bean class="com.unionpay.withhold.admin.interceptor.LoginInterceptor"/>
		</mvc:interceptor>
	</mvc:interceptors>  

</beans>